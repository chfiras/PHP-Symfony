{# src/OC/PlatformBundle/Resources/views/Advert/delete.html.twig #}

{% extends "OCPlatformBundle::layout.html.twig" %}



{% block ocplatform_body %}


  <h2>Supprimer une fiche client</h2>

  <p>
    Etes-vous certain de vouloir supprimer la fiche client de "{{ advert.MailPrincipal }}" ?
  </p>

  {# On met l'id de l'annonce dans la route de l'action du formulaire #}
    <div class="modal fade" id="mydelete" role="dialog">
      <div class="modal-dialog">
  <form action="{{ path('oc_platform_delete', {'id': advert.id}) }}" method="post">
    <a href="{{ path('oc_platform_tablesfiches') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour au tableau des fiches
    </a>
    {# Ici j'ai écrit le bouton de soumission à la main #}
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {# Ceci va générer le champ CSRF #}
    {{ form_rest(form) }}
  </form>
      </div>
  </div>
{% endblock %}
